{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@chat-and-call/utils/feature-gateway-explorer": [
        "libs/utils/feature-gateway-explorer/src/index.ts"
      ],
      "@chat-and-call/socketcluster/adapter": [
        "libs/socketcluster/adapter/src/index.ts"
      ],
      "@chat-and-call/socketcluster/utils-crud-server": [
        "libs/socketcluster/utils-crud-server/src/index.ts"
      ],
      "@chat-and-call/auth/data-access-auth-server": [
        "libs/auth/data-access-auth-server/src/index.ts"
      ],
      "@chat-and-call/auth/shared-auth-interfaces": [
        "libs/auth/shared-auth-interfaces/src/index.ts"
      ],
      "@chat-and-call/utils/database-pool": [
        "libs/utils/database-pool/src/index.ts"
      ],
      "@chat-and-call/auth/feature-auth-web": [
        "libs/auth/feature-auth-web/src/index.ts"
      ],
      "@chat-and-call/socketcluster/socket-client-web": [
        "libs/socketcluster/socket-client-web/src/index.ts"
      ],
      "@chat-and-call/material/ui-material-design": [
        "libs/material/ui-material-design/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
